---
import Cta from './composable/Cta.astro';
import HighlightHeading3 from './composable/HighlightHeading3.astro';

interface Props {
  class?: string;
  work: {
    data: {
      eyebrow: string;
      title: string;
      description: string;
      image: string;
      url: string;
      keywords: string[];
      enable_case_study: boolean;
      theme: string;
    };
    slug: string;
  }
}

const { class: className, work }: Props = Astro.props;
const { eyebrow, title, image, url, keywords = [], enable_case_study, theme } = work.data;
---
<div class:list={[className, "featured-work-container"]}>
  <div class="featured-work">
    <div class="featured-work__image">
      <img src={image} alt={title} />
    </div>
    <div class="featured-work__content">
      <h4 class="eyebrow">{eyebrow}</h4>
      <HighlightHeading3 title={title} type={theme as "primary" | "secondary" | "tertiary" | "quaternary"} />
      {keywords.length > 0 && (
        <ul class="tags featured-work__tags">
          {keywords.map(keyword => (
            <li>{keyword}</li>
          ))}
        </ul>
      )}
    </div>
    <div class:list={[className, "featured-work__ctas"]}>
      {enable_case_study && <Cta href={`/case-study/${work.slug}`} type="primary">View Case Study</Cta>}
      {url && <Cta href={url} type="secondary">See Live</Cta>}
    </div>
  </div>
</div>
<style lang="scss">
  @use "../styles/abstracts/" as *;
  
  .featured-work-container {
    container-type: inline-size;
  }

  .span-2 {
    .featured-work__image {
      aspect-ratio: 16 / 7;
    }
  }

  .featured-work {
    display: grid;
    gap: $size-8;

    &__image {
      aspect-ratio: 4 / 3;
      overflow: hidden;
      border-radius: var(--border-radius-2, $border-radius-2);

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
      }
    }

    &__tags {
      margin-block-start: $size-4;
    }

    &__ctas {
      display: flex;
      flex-direction: column;
      gap: $size-4;
    }

    @include mq(m) {
      &__ctas {
        align-items: end;
        display: flex;
        flex-direction: row;
        gap: $size-4; 
      } 
    }

    @container (width > 940px) {
      grid-template-columns: 5fr 3fr;

      &__image {
        grid-column: span 2;
      }

      &__ctas {
        justify-content: flex-end;
      }
    }
  }
</style>