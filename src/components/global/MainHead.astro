---
import { ViewTransitions } from 'astro:transitions';
import '../../styles/global.scss';

interface Props {
    title?: string | undefined;
    description?: string | undefined;
}

const { 
    title = "Wei-Hsin Chen: Design Engineer Portfolio",
    description = "The portfolio of Wei-Hsin Chen, a design engineer."
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />
<title>{title}</title>
<script>
  import { initTheme } from "../../utils/theme";
  document.addEventListener('astro:page-load', initTheme);
</script>
</head>
<link rel="icon" type="image/svg+xml" href="/favicon.svg">
<link rel="icon" type="image/png" href="/favicon.png">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,400..700;1,9..40,400..700&family=Paytone+One&display=swap" 
  rel="preload" onload="this.onload=null;this.rel='stylesheet'" as="style">
<ViewTransitions />

